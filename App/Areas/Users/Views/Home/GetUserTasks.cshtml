@model List<TaskAbs>


@if (Model.Count == 0)
{
    <ul>
        <li>There are no individual tasks</li>
    </ul>
}
else
{
<div class="task-area">
    <ul>
        @foreach (var task in Model)
        {
            <li>
                <div contenteditable class="auto-size">@task.Content</div>
                <div>
                    <p>Level: @task.LevelOfImportance</p>
                    <p>Type:@task.Type</p>
                    <a class="material-icons"
                       asp-area="Users"
                       asp-controller="Home"
                       asp-action="CompleteTask"
                       asp-route-taskId="@task.Id">check_circle</a>
                </div>
            </li>
        }
    </ul>
</div>
}
@model List<IndividualGroupTaskViewModel>


@if (Model.Count == 0)
{
    <ul>
        <li>There are no individual tasks</li>
    </ul>
}
else
{
    <div class="task-area ">
        <ul class="all-task-area">
            @foreach (var task in Model)
            {
                <li>
                    <div contenteditable class="auto-size">@task.Content</div>
                    <div>
                        @if (task.Username != null)
                        {
                            <p>Username:@task.Username</p>
                        }
                        else
                        {
                            <p>GroupName:@task.GroupName</p>
                        }
                        <p>Type:@task.Type</p>
                        <p>Level: @task.Level</p>
                        <p>Complete:@task.IsCompleted</p>
                    </div>
                </li>
            }
        </ul>
    </div>
}
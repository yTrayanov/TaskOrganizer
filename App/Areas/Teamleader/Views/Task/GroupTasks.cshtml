@model List<TaskAbs>


@if (Model.Count == 0)
{
    <ul>
        <li>There are no Group tasks</li>
    </ul>
}
else
{
    <div class="task-area">
        <ul>
            @foreach (var task in Model)
            {
                <li>
                    <div contenteditable class="auto-size">@task.Content</div>
                    <div>
                        <p>Level: @task.LevelOfImportance</p>
                        <p>Type:@task.Type</p>
                        <a class="material-icons" asp-area="Teamleader" asp-controller="Task" asp-action="Edit" asp-route-taskId="@task.Id">create</a>
                        <a class="material-icons" asp-area="Teamleader" asp-controller="Task" asp-action="TakeForGroup" asp-route-taskId="@task.Id">add_task</a>
                    </div>
                </li>
            }
        </ul>
    </div>
}